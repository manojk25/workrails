<%= form_with(model: production, local: true) do |form| %>
 <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :production_name %>
  </div>

  <div class="field">
    <%= form.label :identity %>
    <%= form.number_field :identity, id: :production_identity %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :production_price %>
  </div>
  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :production_category %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>